\newsavebox{\savetrace}

% Make a box which is textwidth when the border is added
\newlength{\tracewidth}

\newenvironment{traceunit}[1]%
  {\par
  \setlength{\tracewidth}{\textwidth}
  \addtolength{\tracewidth}{-2\fboxsep}
  \addtolength{\tracewidth}{-2\fboxrule}
  \begin{lrbox}{\savetrace}
  \begin{minipage}[t]{\tracewidth}
   \index{TRACE UNIT #1}\textbf{\footnotesize#1}% 
  \setlength{\multicolsep}{0pt}%
 \begin{multicols}{2}\scriptsize}
  {\end{multicols}\end{minipage}\end{lrbox}\fbox{\usebox{\savetrace}}\par}

\newcommand{\traceto}[1]%
{\par\index{TRACE TO #1}\textit{\scriptsize#1}\par}

\newcommand{\tracetype}[1]%
%{\linebreak[3]\hbox{}\hfil #1\linebreak[3]}
{\par{\raggedleft #1\par}}

